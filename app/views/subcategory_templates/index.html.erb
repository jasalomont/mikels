<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subcategories
    </h1>

    <a href="/subcategories/new" class="btn btn-block btn-outline-secondary">
      Add a new subcategory
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "subcategory_templates/subcategories_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subcategories.each do |subcategory| %>
      <tr>
        <td>
          <%= subcategory.id %>
        </td>

        <td>
          <%= subcategory.category_id %>
        </td>

        <td>
          <%= subcategory.name %>
        </td>

        <td>
          <%= subcategory.description %>
        </td>

        <td>
          <%= time_ago_in_words(subcategory.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(subcategory.updated_at) %> ago
        </td>

        <td>
          <a href="/subcategories/<%= subcategory.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @subcategories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
