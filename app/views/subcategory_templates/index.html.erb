<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All subcategories
    </h1>

    <a href="/subcategories/new" class="btn btn-block btn-outline-secondary">
      Add a new subcategory
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @subcategories.each do |subcategory| %>
      <tr>
        <!-- Display subcategory.id start -->
        <td>
          <%= subcategory.id %>
        </td>
        <!-- Display subcategory.id end -->

        <!-- Display subcategory.category_id start -->
        <td>
          <%= subcategory.category_id %>
        </td>
        <!-- Display subcategory.category_id end -->

        <!-- Display subcategory.name start -->
        <td>
          <%= subcategory.name %>
        </td>
        <!-- Display subcategory.name end -->

        <!-- Display subcategory.description start -->
        <td>
          <%= subcategory.description %>
        </td>
        <!-- Display subcategory.description end -->

        <!-- Display subcategory.created_at start -->
        <td>
          <%= time_ago_in_words(subcategory.created_at) %> ago
        </td>
        <!-- Display subcategory.created_at end -->

        <!-- Display subcategory.updated_at start -->
        <td>
          <%= time_ago_in_words(subcategory.updated_at) %> ago
        </td>
        <!-- Display subcategory.updated_at end -->

        <td>
          <a href="/subcategories/<%= subcategory.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
