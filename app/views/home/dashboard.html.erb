<body>
  <div class="container" >

    <div class="page-header">

    </div>

    <div class="row">

      <div class="col-md-3">
        <br>

        <div class="panel panel-default">
          <div class="panel-body" style=" padding:20px" align="center">
            <p></p>
            <hr>
              <% if Profile.where("user_id"=>current_user) != [] %>
            <h4><%= current_user.profile.name %> </h4>
            <% else %>
                Bienvenido
            <% end %>
            <hr>
            <h3 style="margin-bottom:0px">   </h3>
  <% if Salsterr.where("id"=>current_user.profile) != [] %>
            <%= Salsterr.where("id"=>current_user.profile.salsterr_id).first.name %>
  <% else %>
      Hola
  <% end %>
          </div>
        </div>

        <div class="panel panel-default"  >
          <div class="panel-heading">
            <h3 class="panel-title"><b><i class="fa fa-bell" aria-hidden="true"></i> Notificaciones</b></h3>
          </div>
          <div class="panel-body" style="height:220px;border:1px solid #ccc;font:16px/26px ;overflow:auto; padding:0px">
            <table class="table table-striped table-hover">
              <tr>
                <td class="allianz-title" style="font-size:15px"><b> <i class="fa fa-caret-right" aria-hidden="true"></i> Pendientes</b></td>
              </tr>

              <tr>
                <td class="allianz-title" style="font-size:15px"><b> <i class="fa fa-caret-right" aria-hidden="true"></i> Mensajes Directos</b></td>
              </tr>

              <tr>
                <td><%= Complain.where("user_id"=> current_user.id).count %> </td>
              </tr>

              <tr>
                <td class="allianz-title" style="font-size:15px"><b><i class="fa fa-caret-right" aria-hidden="true"></i> Centro de Servicio</b></td>
              </tr>
            </table>
        </div>
      </div>

    </div>

    <div class="col-md-9">
      <h1 style="margin-bottom:0px">
        <div class="row">
          <div class="col-md-12">
            <div class="btn-group btn-group-justified" style="background-color: #4CAF50">
              <a href="/" class="btn btn-md btn-info"><i class="fas fa-user-plus"></i> Noticias </a>
              <a href="/" class="btn btn-md btn-info"><i class="fas fa-search"></i> Buscar Cliente </a>
              <a href="/" class="btn btn-md btn-info"><i class="fas fa-address-book"></i> Calendario </a>
            </div>
          </div>
        </div>
      </h1>

      <div class="panel panel-default" style="background-color:#E7E7E7" >
        <div class="panel-heading" >
          <h3 class="panel-title" style="text-align:center"><b>Herramientas</b></h3>
        </div>
        <div class="panel-body">

          <div class="row">

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-user" aria-hidden="true"></i> Perfil</h3>
                    <p>Datos personales</p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <% if Profile.where("user_id"=>current_user) != [] %>
                    <a href="/profiles/<%=Profile.where("user_id"=>current_user.id).first.id%>" class="btn btn-md btn-info"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                    <% else %>
                        Hola
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-archive" aria-hidden="true"></i> Ventas </h3>
                  <p>Analisis de Ventas</p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <a href="/ventas/vendedor/<%= current_user.profile.slprsnid %>" class="btn btn-md btn-info"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-archive" aria-hidden="true"></i> Productos</h3>
                  <p>Base de datos de productos</p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <a href="/catalogo" class="btn btn-md btn-info"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                </div>
              </div>
            </div>

          </div>

          <div class="row">

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-inbox" aria-hidden="true"></i> Soporte </h3>
                  <p>Centro de Aclaraciones</p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <a href="/complainuser" class="btn btn-md btn-info"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-bar-chart" aria-hidden="true"></i>Control</h3>
                  <p> Panel de Seguimiento </p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <a href="/complainspec/<%= Salsterr.find(current_user.profile.salsterr_id).department.id %>" class="btn btn-md btn-info"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h3><i class="fa fa-bar-chart" aria-hidden="true"></i> Red Mikels</h3>
                  <p> Red social Mikels </p>
                  <br>
                  <div class="btn-group btn-group-justified">
                    <a href="/" class="btn btn-md btn-info">Proximamente</a>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>
    </div>

  </div>
</div>
