<% if @salsterr.present? %>
  <% if @salsterr.errors.any? %>
    <% @salsterr.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new salsterr
</h1>


<hr>

<form action="/create_salsterr" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @salsterr.name %>">
  </div>

  <div class="form-group">
    <label for="code">
      Code
    </label>

    <input type="text" id="code" name="code" class="form-control" value="<%= @salsterr.code %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create salsterr
  </button>
</form>

<hr>

<a href="/salsterrs">
  Go back
</a>
