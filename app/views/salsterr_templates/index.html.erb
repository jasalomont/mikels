<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All salsterrs
    </h1>

    <a href="/salsterrs/new" class="btn btn-block btn-outline-secondary">
      Add a new salsterr
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "salsterr_templates/salsterrs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Code
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @salsterrs.each do |salsterr| %>
      <tr>
        <td>
          <%= salsterr.id %>
        </td>

        <td>
          <%= salsterr.name %>
        </td>

        <td>
          <%= salsterr.code %>
        </td>

        <td>
          <%= time_ago_in_words(salsterr.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(salsterr.updated_at) %> ago
        </td>

        <td>
          <a href="/salsterrs/<%= salsterr.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @salsterrs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
