<h1>
  Add a new solution
</h1>


<hr>

<form action="/create_solution" method="post">

  <div class="form-group">
    <label for="complain_id">
      Complain
    </label>

    <input type="text" id="complain_id" name="complain_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="message">
      Message
    </label>

    <textarea id="message" name="message" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="close">
    <input id="close" class="form-check-input" name="close" type="checkbox">
    <label for="close" class="form-check-label">
      Close
    </label>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="like">
    <input id="like" class="form-check-input" name="like" type="checkbox">
    <label for="like" class="form-check-label">
      Like
    </label>
  </div>

  <div class="form-group">
    <label for="scomment_id">
      Scomment
    </label>

    <input type="text" id="scomment_id" name="scomment_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create solution
  </button>
</form>

<hr>

<a href="/solutions">
  Go back
</a>
