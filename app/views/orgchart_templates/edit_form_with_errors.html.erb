<% if @customer_segment.errors.any? %>
  <% @customer_segment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit customer segment #<%= @customer_segment.id %>
</h1>

<hr>

<form action="/update_customer_segment/<%= @customer_segment.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @customer_segment.name %>">
  </div>

  <div class="form-group">
    <label for="code">
      Code
    </label>

    <input type="text" id="code" name="code" class="form-control" value="<%= @customer_segment.code %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @customer_segment.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update customer segment
  </button>
</form>

<hr>

<a href="/customer_segments">
  Go back
</a>
