<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Organization DB
    </h1>

    <a href="/orgcharts/new" class="btn btn-block btn-outline-secondary">
      Add a new Organization Relation
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          department_id
        </th>

        <th>
          salsterr_id
        </th>

        <th>
          slprsnid
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @orgcharts.each do |orgcharts| %>
      <tr>
        <td>
          <%= orgcharts.id %>
        </td>

        <td>
          <%= orgcharts.department_id %>
        </td>

        <td>
          <%= orgcharts.salsterr_id %>
        </td>

        <td>
          <%= orgcharts.slprsnid %>
        </td>

        <td>
          <%= time_ago_in_words(orgcharts.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(orgcharts.updated_at) %> ago
        </td>

        <td>
          <a href="/orgcharts/<%= orgcharts.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @orgcharts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
