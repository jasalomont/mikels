<%= search_form_for @qc, :class => collapse_search_form, :id => "products_filters" do |f| %>
  <p class="lead">Filtrar resultados:</p>

<div class="row col-sm-12">

  <div class="form-group col-sm-6">
    <%= f.label :itemnmbr_cont, "Código de Producto Contiene" %>
    <%= f.text_field :itemnmbr_cont, :class => "form-control", :placeholder => "Itemnmbr contains" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :item_sku_nuevo_cont, "Código Alterno de Producto Contiene" %>
    <%= f.text_field :item_sku_nuevo_cont, :class => "form-control", :placeholder => "AA001001" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :item_name_cont, "Nombre de Producto" %>
    <%= f.text_field :item_name_cont, :class => "form-control", :placeholder => "Contiene" %>
  </div>

  <div class="form-group col-md-6 mb-1">
    <%= f.label :model_cont, "Modelo contiene" %>
    <%= f.text_field :model_cont, :class => "form-control", :placeholder => "Modelo Contiene" %>
  </div>
</div>

<div class="row col-sm-12">
  <div class="form-group col-sm-6">
    <%= f.label :list_price, "Precio Distribuidor" %>
    <div class="row">
      <div class='col-sm-6 mb-1'>
        <%= f.text_field :list_price_gteq, :class => "form-control", :placeholder => "Mayor o igual que" %>
      </div>
      <div class='col-sm-6'>
        <%= f.text_field :list_price_lteq, :class => "form-control", :placeholder => "Menor o igual que" %>
      </div>
    </div>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :standard_price, "Precio Público" %>
    <div class="row">
      <div class='col-sm-6 mb-1'>
        <%= f.text_field :standard_price_gteq, :class => "form-control", :placeholder => "Mayor o igual que" %>
      </div>
      <div class='col-sm-6'>
        <%= f.text_field :standard_price_lteq, :class => "form-control", :placeholder => "Menor o igual que" %>
      </div>
    </div>
  </div>
</div>

  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/catalogo" class="btn btn-outline-secondary btn-block mb-1">Limpiar Filtros</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#products_filters">
  Mostrar / Ocultar Filtros
</a>
