<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Catálogo General
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "product_templates/catalogo_search_form" %>
  </div>
</div>

<hr>
<div class="container">
  <div class="panel">

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr style="background-color:#540101; color:#f8f9fa">
        <th>
          Código
        </th>

        <th>
          Código Alterno
        </th>

        <th>
          Producto
        </th>

        <th>
          Marca
        </th>

        <th>
          Línea
        </th>

        <th>
          Categoria
        </th>

        <th>
          Subcategoria
        </th>

        <th>
          Modelo
        </th>

        <th>
          Precio Distribuidor
        </th>

        <th>
          Precio Público
        </th>

      </tr>

      <% @products.each do |product| %>
      <tr>

        <td>
          <a href="/products/<%= product.id %>">
          <%= product.itemnmbr %>
          </a>

        </td>
        <td>
          <%= product.item_sku_nuevo %>
        </td>
        <td>
          <%= product.item_name %>
        </td>
        <td>
          <%= product.brand_id %>
        </td>
        <td>
          <%= product.productline_id %>
        </td>
        <td>
          <%= product.category_id %>
        </td>
        <td>
          <%= product.subcategory_id %>
        </td>
        <td>
          <%= product.model %>
        </td>
        <td>
          <%= product.standard_price %>
        </td>
        <td>
          <%= product.list_price %>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @products, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
  </div>
    </div>
