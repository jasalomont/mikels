<!-- Validation failure messages -->
<% if @rank.present? %>
  <% if @rank.errors.any? %>
    <% @rank.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new rank
</h1>


<hr>

<!-- Form rank start -->
<form action="/create_rank" method="post">
<!-- Form rank end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @rank.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for level start -->
  <div class="form-group">
    <label for="level">
      Level
    </label>

    <!-- Input for level start -->
    <input type="text" id="level" name="level" class="form-control" value="<%= @rank.level %>">
    <!-- Input for level end -->
  </div>
  <!-- Label and input for level end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @rank.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for department_id start -->
  <div class="form-group">
    <label for="department_id">
      Department
    </label>

    <!-- Input for department_id start -->
    <input type="text" id="department_id" name="department_id" class="form-control" value="<%= @rank.department_id %>">
    <!-- Input for department_id end -->
  </div>
  <!-- Label and input for department_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create rank
  </button>
</form>

<hr>

<a href="/ranks">
  Go back
</a>
