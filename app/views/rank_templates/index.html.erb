<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ranks
    </h1>

    <a href="/ranks/new" class="btn btn-block btn-outline-secondary">
      Add a new rank
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "rank_templates/ranks_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Level
        </th>

        <th>
          Description
        </th>

        <th>
          Department
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ranks.each do |rank| %>
      <tr>
        <td>
          <%= rank.id %>
        </td>

        <td>
          <%= rank.title %>
        </td>

        <td>
          <%= rank.level %>
        </td>

        <td>
          <%= rank.description %>
        </td>

        <td>
          <%= rank.department_id %>
        </td>

        <td>
          <%= time_ago_in_words(rank.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(rank.updated_at) %> ago
        </td>

        <td>
          <a href="/ranks/<%= rank.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ranks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
