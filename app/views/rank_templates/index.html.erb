<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ranks
    </h1>

    <a href="/ranks/new" class="btn btn-block btn-outline-secondary">
      Add a new rank
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Level
        </th>

        <th>
          Description
        </th>

        <th>
          Department
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ranks.each do |rank| %>
      <tr>
        <!-- Display rank.id start -->
        <td>
          <%= rank.id %>
        </td>
        <!-- Display rank.id end -->

        <!-- Display rank.title start -->
        <td>
          <%= rank.title %>
        </td>
        <!-- Display rank.title end -->

        <!-- Display rank.level start -->
        <td>
          <%= rank.level %>
        </td>
        <!-- Display rank.level end -->

        <!-- Display rank.description start -->
        <td>
          <%= rank.description %>
        </td>
        <!-- Display rank.description end -->

        <!-- Display rank.department_id start -->
        <td>
          <%= rank.department_id %>
        </td>
        <!-- Display rank.department_id end -->

        <!-- Display rank.created_at start -->
        <td>
          <%= time_ago_in_words(rank.created_at) %> ago
        </td>
        <!-- Display rank.created_at end -->

        <!-- Display rank.updated_at start -->
        <td>
          <%= time_ago_in_words(rank.updated_at) %> ago
        </td>
        <!-- Display rank.updated_at end -->

        <td>
          <a href="/ranks/<%= rank.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ranks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
