<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Rank #<%= @rank.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ranks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/ranks/<%= @rank.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit rank
        </a>
      </div>

      <div class="col">
        <a href="/delete_rank/<%= @rank.id %>" class="btn btn-block btn-outline-secondary">
          Delete rank
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @rank.title %>
      </dd>

      <dt>
        Level
      </dt>
      <dd>
        <%= @rank.level %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @rank.description %>
      </dd>

      <dt>
        Department
      </dt>
      <dd>
        <%= @rank.department_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@rank.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@rank.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

