<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All complaintypes
    </h1>

    <a href="/complaintypes/new" class="btn btn-block btn-outline-secondary">
      Add a new complaintype
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "complaintype_templates/complaintypes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Code
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @complaintypes.each do |complaintype| %>
      <tr>
        <td>
          <%= complaintype.id %>
        </td>

        <td>
          <%= complaintype.title %>
        </td>

        <td>
          <%= complaintype.code %>
        </td>

        <td>
          <%= complaintype.description %>
        </td>

        <td>
          <%= time_ago_in_words(complaintype.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(complaintype.updated_at) %> ago
        </td>

        <td>
          <a href="/complaintypes/<%= complaintype.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @complaintypes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
