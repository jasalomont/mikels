<% if @complaintype.present? %>
  <% if @complaintype.errors.any? %>
    <% @complaintype.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new complaintype
</h1>


<hr>

<form action="/create_complaintype" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @complaintype.title %>">
  </div>

  <div class="form-group">
    <label for="code">
      Code
    </label>

    <input type="text" id="code" name="code" class="form-control" value="<%= @complaintype.code %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @complaintype.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create complaintype
  </button>
</form>

<hr>

<a href="/complaintypes">
  Go back
</a>
