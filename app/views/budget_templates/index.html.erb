<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All budgets
    </h1>

    <a href="/budgets/new" class="btn btn-block btn-outline-secondary">
      Add a new budget
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "budget_templates/budgets_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Year
        </th>

        <th>
          Custnmbr
        </th>

        <th>
          Salsterr
        </th>

        <th>
          Gerente
        </th>

        <th>
          Slprsnid
        </th>

        <th>
          Sopnumbe
        </th>

        <th>
          Ene
        </th>

        <th>
          Feb
        </th>

        <th>
          Mar
        </th>

        <th>
          Abr
        </th>

        <th>
          May
        </th>

        <th>
          Jun
        </th>

        <th>
          Jul
        </th>

        <th>
          Ago
        </th>

        <th>
          Oct
        </th>

        <th>
          Sep
        </th>

        <th>
          Nov
        </th>

        <th>
          Dic
        </th>

        <th>
          Total
        </th>

        <th>
          Agreement
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @budgets.each do |budget| %>
      <tr>
        <td>
          <%= budget.id %>
        </td>

        <td>
          <%= budget.year %>
        </td>

        <td>
          <%= budget.custnmbr %>
        </td>

        <td>
          <%= budget.salsterr %>
        </td>

        <td>
          <%= budget.gerente %>
        </td>

        <td>
          <%= budget.slprsnid %>
        </td>

        <td>
          <%= budget.sopnumbe %>
        </td>

        <td>
          <%= budget.ene %>
        </td>

        <td>
          <%= budget.feb %>
        </td>

        <td>
          <%= budget.mar %>
        </td>

        <td>
          <%= budget.abr %>
        </td>

        <td>
          <%= budget.may %>
        </td>

        <td>
          <%= budget.jun %>
        </td>

        <td>
          <%= budget.jul %>
        </td>

        <td>
          <%= budget.ago %>
        </td>

        <td>
          <%= budget.oct %>
        </td>

        <td>
          <%= budget.sep %>
        </td>

        <td>
          <%= budget.nov %>
        </td>

        <td>
          <%= budget.dic %>
        </td>

        <td>
          <%= budget.total %>
        </td>

        <td>
          <%= budget.agreement_id %>
        </td>

        <td>
          <%= time_ago_in_words(budget.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(budget.updated_at) %> ago
        </td>

        <td>
          <a href="/budgets/<%= budget.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @budgets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
