<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All productlines
    </h1>

    <a href="/productlines/new" class="btn btn-block btn-outline-secondary">
      Add a new productline
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "productline_templates/productlines_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Subcategory
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @productlines.each do |productline| %>
      <tr>
        <td>
          <%= productline.id %>
        </td>

        <td>
          <%= productline.name %>
        </td>

        <td>
          <%= productline.description %>
        </td>

        <td>
          <%= productline.subcategory_id %>
        </td>

        <td>
          <%= time_ago_in_words(productline.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(productline.updated_at) %> ago
        </td>

        <td>
          <a href="/productlines/<%= productline.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @productlines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
