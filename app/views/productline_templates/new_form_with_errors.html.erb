<!-- Validation failure messages -->
<% if @productline.present? %>
  <% if @productline.errors.any? %>
    <% @productline.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new productline
</h1>


<hr>

<!-- Form productline start -->
<form action="/create_productline" method="post">
<!-- Form productline end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @productline.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @productline.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for subcategory_id start -->
  <div class="form-group">
    <label for="subcategory_id">
      Subcategory
    </label>

    <!-- Input for subcategory_id start -->
    <input type="text" id="subcategory_id" name="subcategory_id" class="form-control" value="<%= @productline.subcategory_id %>">
    <!-- Input for subcategory_id end -->
  </div>
  <!-- Label and input for subcategory_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create productline
  </button>
</form>

<hr>

<a href="/productlines">
  Go back
</a>
