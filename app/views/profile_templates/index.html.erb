<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All profiles
    </h1>

    <a href="/profiles/new" class="btn btn-block btn-outline-secondary">
      Add a new profile
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "profile_templates/profiles_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Name
        </th>

        <th>
          Last name
        </th>

        <th>
          Nick name
        </th>

        <th>
          Phone
        </th>

        <th>
          Mobile
        </th>

        <th>
          Profile pic
        </th>

        <th>
          Rank
        </th>

        <th>
          City base
        </th>

        <th>
          Address
        </th>

        <th>
          Active
        </th>

        <th>
          Slprsnid
        </th>

        <th>
          Salsterr
        </th>

        <th>
          Start
        </th>

        <th>
          Full name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @profiles.each do |profile| %>
      <tr>
        <!-- Display profile.id start -->
        <td>
          <%= profile.id %>
        </td>
        <!-- Display profile.id end -->

        <!-- Display profile.user_id start -->
        <td>
          <%= profile.user_id %>
        </td>
        <!-- Display profile.user_id end -->

        <!-- Display profile.name start -->
        <td>
          <%= profile.name %>
        </td>
        <!-- Display profile.name end -->

        <!-- Display profile.last_name start -->
        <td>
          <%= profile.last_name %>
        </td>
        <!-- Display profile.last_name end -->

        <!-- Display profile.nick_name start -->
        <td>
          <%= profile.nick_name %>
        </td>
        <!-- Display profile.nick_name end -->

        <!-- Display profile.phone start -->
        <td>
          <%= profile.phone %>
        </td>
        <!-- Display profile.phone end -->

        <!-- Display profile.mobile start -->
        <td>
          <%= profile.mobile %>
        </td>
        <!-- Display profile.mobile end -->

        <!-- Display profile.profile_pic start -->
        <td>
          <img src='<%= profile.profile_pic %>' class='img-fluid'>
        </td>
        <!-- Display profile.profile_pic end -->

        <!-- Display profile.rank_id start -->
        <td>
          <%= profile.rank_id %>
        </td>
        <!-- Display profile.rank_id end -->

        <!-- Display profile.city_base start -->
        <td>
          <%= profile.city_base %>
        </td>
        <!-- Display profile.city_base end -->

        <!-- Display profile.address start -->
        <td>
          <%= profile.address %>
        </td>
        <!-- Display profile.address end -->

        <!-- Display profile.active start -->
        <td>
          <%= profile.active %>
        </td>
        <!-- Display profile.active end -->

        <!-- Display profile.slprsnid start -->
        <td>
          <%= profile.slprsnid %>
        </td>
        <!-- Display profile.slprsnid end -->

        <!-- Display profile.salsterr_id start -->
        <td>
          <%= profile.salsterr_id %>
        </td>
        <!-- Display profile.salsterr_id end -->

        <!-- Display profile.start start -->
        <td>
          <%= profile.start %>
        </td>
        <!-- Display profile.start end -->

        <!-- Display profile.full_name start -->
        <td>
          <%= profile.full_name %>
        </td>
        <!-- Display profile.full_name end -->

        <!-- Display profile.created_at start -->
        <td>
          <%= time_ago_in_words(profile.created_at) %> ago
        </td>
        <!-- Display profile.created_at end -->

        <!-- Display profile.updated_at start -->
        <td>
          <%= time_ago_in_words(profile.updated_at) %> ago
        </td>
        <!-- Display profile.updated_at end -->

        <td>
          <a href="/profiles/<%= profile.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @profiles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
