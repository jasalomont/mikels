<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All profiles
    </h1>

    <a href="/profiles/new" class="btn btn-block btn-outline-secondary">
      Add a new profile
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "profile_templates/profiles_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Name
        </th>

        <th>
          Last name
        </th>

        <th>
          Nick name
        </th>

        <th>
          Phone
        </th>

        <th>
          Mobile
        </th>

        <th>
          Profile pic
        </th>

        <th>
          Rank
        </th>

        <th>
          City base
        </th>

        <th>
          Address
        </th>

        <th>
          Active
        </th>

        <th>
          Slprsnid
        </th>

        <th>
          Salsterr
        </th>

        <th>
          Start
        </th>

        <th>
          Full name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @profiles.each do |profile| %>
      <tr>
        <td>
          <%= profile.id %>
        </td>

        <td>
          <%= profile.user_id %>
        </td>

        <td>
          <%= profile.name %>
        </td>

        <td>
          <%= profile.last_name %>
        </td>

        <td>
          <%= profile.nick_name %>
        </td>

        <td>
          <%= profile.phone %>
        </td>

        <td>
          <%= profile.mobile %>
        </td>

        <td>
          <img src='<%= profile.profile_pic %>' class='img-fluid'>
        </td>

        <td>
          <%= profile.rank_id %>
        </td>

        <td>
          <%= profile.city_base %>
        </td>

        <td>
          <%= profile.address %>
        </td>

        <td>
          <%= profile.active %>
        </td>

        <td>
          <%= profile.slprsnid %>
        </td>

        <td>
          <%= profile.salsterr_id %>
        </td>

        <td>
          <%= profile.start %>
        </td>

        <td>
          <%= profile.full_name %>
        </td>

        <td>
          <%= time_ago_in_words(profile.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(profile.updated_at) %> ago
        </td>

        <td>
          <a href="/profiles/<%= profile.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @profiles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
