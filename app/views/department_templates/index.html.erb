<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All departments
    </h1>

    <a href="/departments/new" class="btn btn-block btn-outline-secondary">
      Add a new department
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Code
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @departments.each do |department| %>
      <tr>
        <!-- Display department.id start -->
        <td>
          <%= department.id %>
        </td>
        <!-- Display department.id end -->

        <!-- Display department.code start -->
        <td>
          <%= department.code %>
        </td>
        <!-- Display department.code end -->

        <!-- Display department.name start -->
        <td>
          <%= department.name %>
        </td>
        <!-- Display department.name end -->

        <!-- Display department.created_at start -->
        <td>
          <%= time_ago_in_words(department.created_at) %> ago
        </td>
        <!-- Display department.created_at end -->

        <!-- Display department.updated_at start -->
        <td>
          <%= time_ago_in_words(department.updated_at) %> ago
        </td>
        <!-- Display department.updated_at end -->

        <td>
          <a href="/departments/<%= department.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
