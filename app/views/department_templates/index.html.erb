<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All departments
    </h1>

    <a href="/departments/new" class="btn btn-block btn-outline-secondary">
      Add a new department
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "department_templates/departments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Code
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @departments.each do |department| %>
      <tr>
        <td>
          <%= department.id %>
        </td>

        <td>
          <%= department.code %>
        </td>

        <td>
          <%= department.name %>
        </td>

        <td>
          <%= time_ago_in_words(department.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(department.updated_at) %> ago
        </td>

        <td>
          <a href="/departments/<%= department.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @departments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
