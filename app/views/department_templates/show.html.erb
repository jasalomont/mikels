<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Department #<%= @department.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/departments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/departments/<%= @department.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit department
        </a>
      </div>

      <div class="col">
        <a href="/delete_department/<%= @department.id %>" class="btn btn-block btn-outline-secondary">
          Delete department
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Code
      </dt>
      <dd>
        <%= @department.code %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @department.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@department.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@department.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

