<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All customer segments
    </h1>

    <a href="/customer_segments/new" class="btn btn-block btn-outline-secondary">
      Add a new customer segment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Code
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @customer_segments.each do |customer_segment| %>
      <tr>
        <!-- Display customer_segment.id start -->
        <td>
          <%= customer_segment.id %>
        </td>
        <!-- Display customer_segment.id end -->

        <!-- Display customer_segment.name start -->
        <td>
          <%= customer_segment.name %>
        </td>
        <!-- Display customer_segment.name end -->

        <!-- Display customer_segment.code start -->
        <td>
          <%= customer_segment.code %>
        </td>
        <!-- Display customer_segment.code end -->

        <!-- Display customer_segment.description start -->
        <td>
          <%= customer_segment.description %>
        </td>
        <!-- Display customer_segment.description end -->

        <!-- Display customer_segment.created_at start -->
        <td>
          <%= time_ago_in_words(customer_segment.created_at) %> ago
        </td>
        <!-- Display customer_segment.created_at end -->

        <!-- Display customer_segment.updated_at start -->
        <td>
          <%= time_ago_in_words(customer_segment.updated_at) %> ago
        </td>
        <!-- Display customer_segment.updated_at end -->

        <td>
          <a href="/customer_segments/<%= customer_segment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @customer_segments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
