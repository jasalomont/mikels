<% if @region.present? %>
  <% if @region.errors.any? %>
    <% @region.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new region
</h1>


<hr>

<form action="/create_region" method="post">

  <div class="form-group">
    <label for="state">
      State
    </label>

    <input type="text" id="state" name="state" class="form-control" value="<%= @region.state %>">
  </div>

  <div class="form-group">
    <label for="state_code">
      State code
    </label>

    <input type="text" id="state_code" name="state_code" class="form-control" value="<%= @region.state_code %>">
  </div>

  <div class="form-group">
    <label for="statenmbr">
      Statenmbr
    </label>

    <input type="text" id="statenmbr" name="statenmbr" class="form-control" value="<%= @region.statenmbr %>">
  </div>

  <div class="form-group">
    <label for="salsterr_id">
      Salsterr
    </label>

    <input type="text" id="salsterr_id" name="salsterr_id" class="form-control" value="<%= @region.salsterr_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create region
  </button>
</form>

<hr>

<a href="/regions">
  Go back
</a>
