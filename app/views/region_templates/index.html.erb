<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All regions
    </h1>

    <a href="/regions/new" class="btn btn-block btn-outline-secondary">
      Add a new region
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "region_templates/regions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          State
        </th>

        <th>
          State code
        </th>

        <th>
          Statenmbr
        </th>

        <th>
          Salsterr
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @regions.each do |region| %>
      <tr>
        <td>
          <%= region.id %>
        </td>

        <td>
          <%= region.state %>
        </td>

        <td>
          <%= region.state_code %>
        </td>

        <td>
          <%= region.statenmbr %>
        </td>

        <td>
          <%= region.salsterr_id %>
        </td>

        <td>
          <%= time_ago_in_words(region.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(region.updated_at) %> ago
        </td>

        <td>
          <a href="/regions/<%= region.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @regions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
