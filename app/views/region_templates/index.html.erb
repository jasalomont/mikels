<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All regions
    </h1>

    <a href="/regions/new" class="btn btn-block btn-outline-secondary">
      Add a new region
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          State
        </th>

        <th>
          State code
        </th>

        <th>
          Statenmbr
        </th>

        <th>
          Salsterr
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @regions.each do |region| %>
      <tr>
        <!-- Display region.id start -->
        <td>
          <%= region.id %>
        </td>
        <!-- Display region.id end -->

        <!-- Display region.state start -->
        <td>
          <%= region.state %>
        </td>
        <!-- Display region.state end -->

        <!-- Display region.state_code start -->
        <td>
          <%= region.state_code %>
        </td>
        <!-- Display region.state_code end -->

        <!-- Display region.statenmbr start -->
        <td>
          <%= region.statenmbr %>
        </td>
        <!-- Display region.statenmbr end -->

        <!-- Display region.salsterr_id start -->
        <td>
          <%= region.salsterr_id %>
        </td>
        <!-- Display region.salsterr_id end -->

        <!-- Display region.created_at start -->
        <td>
          <%= time_ago_in_words(region.created_at) %> ago
        </td>
        <!-- Display region.created_at end -->

        <!-- Display region.updated_at start -->
        <td>
          <%= time_ago_in_words(region.updated_at) %> ago
        </td>
        <!-- Display region.updated_at end -->

        <td>
          <a href="/regions/<%= region.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
