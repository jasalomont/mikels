<h1>
  Add a new scomment
</h1>


<hr>

<form action="/create_scomment" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="solution_id">
      Solution
    </label>

    <input type="text" id="solution_id" name="solution_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="message">
      Message
    </label>

    <textarea id="message" name="message" class="form-control" rows="3"></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create scomment
  </button>
</form>

<hr>

<a href="/scomments">
  Go back
</a>
