<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All scomments
    </h1>

    <a href="/scomments/new" class="btn btn-block btn-outline-secondary">
      Add a new scomment
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "scomment_templates/scomments_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Solution
        </th>

        <th>
          Message
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @scomments.each do |scomment| %>
      <tr>
        <!-- Display scomment.id start -->
        <td>
          <%= scomment.id %>
        </td>
        <!-- Display scomment.id end -->

        <!-- Display scomment.user_id start -->
        <td>
          <%= scomment.user_id %>
        </td>
        <!-- Display scomment.user_id end -->

        <!-- Display scomment.solution_id start -->
        <td>
          <%= scomment.solution_id %>
        </td>
        <!-- Display scomment.solution_id end -->

        <!-- Display scomment.message start -->
        <td>
          <%= scomment.message %>
        </td>
        <!-- Display scomment.message end -->

        <!-- Display scomment.created_at start -->
        <td>
          <%= time_ago_in_words(scomment.created_at) %> ago
        </td>
        <!-- Display scomment.created_at end -->

        <!-- Display scomment.updated_at start -->
        <td>
          <%= time_ago_in_words(scomment.updated_at) %> ago
        </td>
        <!-- Display scomment.updated_at end -->

        <td>
          <a href="/scomments/<%= scomment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @scomments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
