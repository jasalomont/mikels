<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Centro de Soporte
    </h1>

    <a href="/complains/new" class="btn btn-block btn-outline-secondary">
      Nueva Aclaración
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "complain_templates/complains_search_form" %>
  </div>
</div>



<hr>
<div class="panel panel-default" style="background-color:#E7E7E7">
  <div class="panel-heading" >
    <h3 class="panel-title" style="text-align:center"><b>Tickets Abiertos</b></h3>
  </div>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Folio
        </th>

        <th>
          Usuario
        </th>

        <th>
          Tipo de Aclaración
        </th>

        <th>
          Departamento
        </th>

        <th>
          Título
        </th>

        <th>
          Status
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @complains.each do |complain| %>
      <tr>
        <td>
          <%= complain.id %>
        </td>

        <td>
          <%= complain.user.profile.name %>
        </td>

        <td>
          <%= complain.complaintype.title %>
        </td>

        <td>
          <%= complain.department_id %>
        </td>

        <td>
          <%= complain.title %>
        </td>

        <td>
          <%= complain.status %>
        </td>

        <td>
          <%= complain.rating %>
        </td>

        <td>
          <%= time_ago_in_words(complain.created_at) %> ago
        </td>

        <td>
          <a href="/complains/<%= complain.id %>">
          <i class="fa fa-search-plus fa-lg" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @complains, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
