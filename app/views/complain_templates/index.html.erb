<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All complains
    </h1>

    <a href="/complains/new" class="btn btn-block btn-outline-secondary">
      Add a new complain
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "complain_templates/complains_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Complaintype
        </th>

        <th>
          Solved
        </th>

        <th>
          Description
        </th>

        <th>
          Department
        </th>

        <th>
          Itemnmbr
        </th>

        <th>
          Sopnumbe
        </th>

        <th>
          Profile
        </th>

        <th>
          Rating
        </th>

        <th>
          Status
        </th>

        <th>
          Title
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @complains.each do |complain| %>
      <tr>
        <td>
          <%= complain.id %>
        </td>

        <td>
          <%= complain.user_id %>
        </td>

        <td>
          <%= complain.complaintype_id %>
        </td>

        <td>
          <%= complain.solved %>
        </td>

        <td>
          <%= complain.description %>
        </td>

        <td>
          <%= complain.department_id %>
        </td>

        <td>
          <%= complain.itemnmbr %>
        </td>

        <td>
          <%= complain.sopnumbe %>
        </td>

        <td>
          <%= complain.profile_id %>
        </td>

        <td>
          <%= complain.rating %>
        </td>

        <td>
          <%= complain.status %>
        </td>

        <td>
          <%= complain.title %>
        </td>

        <td>
          <%= time_ago_in_words(complain.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(complain.updated_at) %> ago
        </td>

        <td>
          <a href="/complains/<%= complain.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @complains, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
