<h1>
  Crear Nueva Aclaración
</h1>


<hr>

<form action="/create_complain" method="post">

  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
  </div>

  <div class="form-group">
    <label for="complaintype_id">
      Tipo de Aclaración
    </label>
    <%= select_tag(:complaintype_id, options_from_collection_for_select(Complaintype.all, :id,:title), :class =>"form-control") %>

  </div>


    <div class="form-group">
      <label for="title">
        Título (Max 40 caracteres)
      </label>

      <input type="text" id="title" name="title" maxlength="40" class="form-control">
    </div>

  <div class="form-group">
    <label for="description">
      Descripción
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="department_id">
      Departamento al que hace referencia
    </label>
    <%= select_tag(:department_id, options_from_collection_for_select(Department.all, :id,:name), :class =>"form-control") %>

  </div>

  <div class="form-group">
    <label for="profile_id">
      Personal responsable
    </label>
      <%= select_tag(:profile_id, options_from_collection_for_select(Profile.all, :user_id,:name), :class =>"form-control") %>

  </div>

  <div class="form-group">
    <label for="itemnmbr">
      Código de producto (Solo Si Aplica)
    </label>
    <%= select_tag(:itemnmbr, options_from_collection_for_select(Product.all, :itemnmbr, :itemnmbr), :class =>"form-control") %>
  </div>

  <div class="form-group">
    <label for="sopnumbe">
      #Factura o #Pedido (Solo Si Aplica)
    </label>

    <input type="text" id="sopnumbe" name="sopnumbe" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="solved">

    <label for="solved" class="form-check-label">

    </label>
  </div>


  <div class="form-group">
    <input type="hidden" id="rating" name="rating" class="form-control">
  </div>

  <div class="form-group">
    <input type="hidden" id="status" name="status" class="form-control" value="Sin Atender">
  </div>
  <button class="btn btn-block btn-outline-secondary">
    Crear Ticket de Aclaración
  </button>
</form>

<hr>

<a href="/complains">
  Regresar
</a>
