<h1>
  Edit complain #<%= @complain.id %>
</h1>

<hr>

<!-- Form complain start -->
<form action="/update_complain/<%= @complain.id %>" method="post">
<!-- Form complain end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @complain.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for complaintype_id start -->
  <div class="form-group">
    <label for="complaintype_id">
      Complaintype
    </label>

    <!-- Input for complaintype_id start -->
    <input type="text" id="complaintype_id" name="complaintype_id" class="form-control" value="<%= @complain.complaintype_id %>">
    <!-- Input for complaintype_id end -->
  </div>
  <!-- Label and input for complaintype_id end -->

  <!-- Label and input for solved start -->
  <div class="form-check">
    <input type="hidden" value="0" name="solved">
    <!-- Input for solved start -->
    <input id="solved" class="form-check-input" name="solved" type="checkbox" value="1" <%= "checked" if @complain.solved %>>
    <!-- Input for solved end -->
    <label for="solved" class="form-check-label">
      Solved
    </label>
  </div>

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @complain.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for department_id start -->
  <div class="form-group">
    <label for="department_id">
      Department
    </label>

    <!-- Input for department_id start -->
    <input type="text" id="department_id" name="department_id" class="form-control" value="<%= @complain.department_id %>">
    <!-- Input for department_id end -->
  </div>
  <!-- Label and input for department_id end -->

  <!-- Label and input for itemnmbr start -->
  <div class="form-group">
    <label for="itemnmbr">
      Itemnmbr
    </label>

    <!-- Input for itemnmbr start -->
    <input type="text" id="itemnmbr" name="itemnmbr" class="form-control" value="<%= @complain.itemnmbr %>">
    <!-- Input for itemnmbr end -->
  </div>
  <!-- Label and input for itemnmbr end -->

  <!-- Label and input for sopnumbe start -->
  <div class="form-group">
    <label for="sopnumbe">
      Sopnumbe
    </label>

    <!-- Input for sopnumbe start -->
    <input type="text" id="sopnumbe" name="sopnumbe" class="form-control" value="<%= @complain.sopnumbe %>">
    <!-- Input for sopnumbe end -->
  </div>
  <!-- Label and input for sopnumbe end -->

  <!-- Label and input for profile_id start -->
  <div class="form-group">
    <label for="profile_id">
      Profile
    </label>

    <!-- Input for profile_id start -->
    <input type="text" id="profile_id" name="profile_id" class="form-control" value="<%= @complain.profile_id %>">
    <!-- Input for profile_id end -->
  </div>
  <!-- Label and input for profile_id end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <!-- Input for rating start -->
    <input type="text" id="rating" name="rating" class="form-control" value="<%= @complain.rating %>">
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control" value="<%= @complain.status %>">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @complain.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <button class="btn btn-block btn-outline-secondary">
    Update complain
  </button>
</form>

<hr>

<a href="/complains">
  Go back
</a>
